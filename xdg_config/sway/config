xwayland force
exec "dbus-update-activation-environment --systemd --all"

set $rootd $HOME/.config/sway
set $confd $rootd/modules.d
set $scriptd $rootd/scripts

set $term kitty
set $menu wofi
set $filemanager dolphin
set $browser flatpak run com.brave.Browser
set $email thunderbird

include ./sway.d/*.conf

