{
  "languageserver": {
    "bash": {
      "args": [
        "start"
      ], 
      "command": "bash-language-server", 
      "filetypes": [
        "sh"
      ], 
      "ignoredRootPaths": [
        "~"
      ]
    }, 
    "ccls": {
      "command": "ccls", 
      "filetypes": [
        "c", 
        "cpp", 
        "objc", 
        "objcpp"
      ], 
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        }, 
        "client": {
          "snippetSupport": true
        }, 
        "highlight": {
          "lsRanges": true
        }
      }, 
      "rootPatterns": [
        ".ccls"
      ]
    }, 
    "cmake": {
      "command": "cmake-language-server", 
      "filetypes": [
        "cmake"
      ], 
      "initializationOptions": {
        "buildDirectory": "build"
      }, 
      "rootPatterns": [
        "build/"
      ]
    }, 
    "dockerfile": {
      "args": [
        "--stdio"
      ], 
      "command": "docker-langserver", 
      "filetypes": [
        "dockerfile"
      ]
    } 
  },
  "python.pythonPath": "/Users/hftsai/.dotfiles/pyvenv/lab/bin/python3"
}
