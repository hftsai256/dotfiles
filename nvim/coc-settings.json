{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls"],
      "initializationOptions": {
         "cache": {
           "directory": ".ccls-cache"
         },
         "highlight": {
           "lsRanges" : true
         }
       }
    }
  }
}
